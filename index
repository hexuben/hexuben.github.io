<!DOCTYPE html>
<html>
<head>
	<title>首页 - hashben's museum</title>
	<script type="text/javascript">
		function drawSquare(sx, sy, tx, ty){
			context.beginPath();
			context.moveTo(sx, sy);
			context.lineTo(sx, ty);
			context.lineTo(tx, ty);
			context.lineTo(tx, sy);
			context.closePath();
			context.stroke();
		}
	</script>
</head>
<body>
	<canvas id="mine" style="width:100%; height:100%">您的浏览器不支持canvas</canvas>
	<script type="text/javascript">
		var canvas = document.getElementById("mine");
		var context = canvas.getContext('2d');
		context.lineCap = 'square';
		context.strokeStyle = '#000000';
		context.lineWidth = 2;
		// drawSquare(0, 0, screen.width, 20);
		context.fillStyle = 'black';
		context.fillRect(0, 0, screen.width, 20);
		context.fillStyle = 'white';
		context.font = "14px Comic Sans MS";
		context.fillText("hashben's museum", 5, 15);
		context.fill();
	</script>
</body>
</html>
